#!/usr/bin/env ruby

$KCODE = 'u'

require 'rubygems'
require 'termtter'
require 'plugin/standard_commands'
require 'plugin/stdout'
require 'configatron'

conf_file = File.expand_path('~/.termtter')
if File.exist? conf_file
  load conf_file
else
  puts <<EOS
The configuration file does not exist.
Example: 
# ~/.termtter
configatron.user_name = 'USERNAME'
configatron.password = 'PASSWORD'
EOS
  exit 1
end

Termtter::Client.run
